---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---
<Layout title="NookOffice">
	<script>
		import YoutubePlayer from 'yt-player';
		import { useState } from "react";

		const player = new YoutubePlayer('#player', {
			autoplay: true,
			keyboard: true,
			controls: false,
			annotations: false,
		});
		const feedback = document.getElementById('feedback'); 


		player.load('44MCworZf78');
		player.setVolume(100);
		
		function play(){
			player.play();
			if(feedback){feedback.innerHTML = "Playing...";}		
			console.log('test');
		}
		function pause(){
			player.pause();

			if(feedback){feedback.innerHTML = "Paused";}		
			console.log('test pause');
		}

		// event handling
		// Find all buttons with the `alert` class on the page.
		const controls = document.querySelectorAll('img.control');

		// Handle clicks on each button.
		controls.forEach((control) => {
			control.addEventListener('click', () => {
				switch(control.id) {
					case "pause":
						pause();
						break;
					case "play":
						play();
						break;
				} 
			});
			control.addEventListener('mouseenter', () => {
					switch(control.id) {
						case "pause":
							if(feedback){feedback.innerHTML = "Press to Pause";}	
							break;
						case "play":
							if(feedback){feedback.innerHTML = "Press to Play";}	
							break;
					} 
			});
		});
	</script>
	<main>
		<div class="video-feed">
			<img class="feed-img" src="./video-feed/bg_1.png"/>
			<div class="hidden">
				<div id="player"></div>
			</div>
		</div>
		<div class="player-controls">
			<img class="control" id="pause" src="./player-controls/pause.svg"/>
			<img class="control" id="play" src="./player-controls/play.svg"/>
			<img class="control" id="refresh" src="./player-controls/refresh.svg"/>
			<p id='feedback'></p>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: 0;

		padding: 1rem;

		display: flex;
		justify-content: center;
		align-items: center;

		flex-direction: column;

		overflow: hidden;
		
		width: calc(100vw - 2rem);
		height: calc(100vh - 2rem);
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	img{
		width: 1140px;
		height: 600px;
		border-radius: 25px;
		object-fit: cover;
	}

	.player-controls{
		display: flex;
		justify-content: flex-start;
		align-items: center;

		margin-top: 10px;
		width: calc(1140px - 1.5rem);
		padding: 1rem;
		background-color: #5BAAAB;
		border-radius: 25px;
	}
	.player-controls img.control{
		width: 35px;
		height: 35px;
		
		margin-right: 15px;
		opacity: 1;
	}
	.player-controls img.control:hover{
		cursor: pointer;
		opacity: 0.75;
	}
	.hidden{
		visibility: hidden;
		position: absolute;
		top:0;
		left:0;
		width: 1px;
		height: 1px;
		pointer-events: none;
	}
	#feedback {
		font-size: 1rem;
		color: #FFFDF2;
		margin: 0;
		padding: 0;

		font-weight: 600;
	}
</style>
