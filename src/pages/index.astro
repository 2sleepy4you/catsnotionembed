---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="NookOffice">
	<main>
		<div class="video-feed">
			<img class="feed-img" src="./video-feed/bg_1.png"/>
		</div>
		<div class="player-controls">
			<img class="control" id="pause" src="./player-controls/pause.svg"/>
			<img class="control" id="play" src="./player-controls/play.svg"/>
			<img class="control" id="refresh" src="./player-controls/refresh.svg"/>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: 0;

		padding: 1rem;

		display: flex;
		justify-content: center;
		align-items: center;

		flex-direction: column;

		overflow: hidden;
		
		width: calc(100vw - 2rem);
		height: calc(100vh - 2rem);
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	img{
		width: 1140px;
		height: 600px;
		border-radius: 25px;
		object-fit: cover;
	}

	.player-controls{
		display: flex;
		justify-content: flex-start;
		align-items: center;

		margin-top: 10px;
		width: calc(1140px - 1.5rem);
		padding: 1rem;
		background-color: #5BAAAB;
		border-radius: 25px;
	}
	.player-controls img.control{
		width: 35px;
		height: 35px;
		
		margin-right: 15px;
	}
</style>
