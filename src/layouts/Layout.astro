---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link href="https://css.gg/css" rel="stylesheet" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href="https://www.nookoffice.live/" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="NookOffice hosts hourly rotating Animal Crossing tracks for relaxing, studying, or working."
		/>
		<meta
			name="twitter:card"
			content="Relax or wind down with rotating Animal Crosing music :)"
		/>
		<title>{title}</title>
		<script>
			const url = new URL(window.location.toString());
			const searchParams = url.searchParams;
			if (searchParams.get("embed") == "true") {
				document.getElementsByTagName("title")[0].innerHTML =
					"NookOffice Embed";
				document.getElementsByTagName("body")[0].style.backgroundImage = "none";
				document.getElementsByTagName("body")[0].style.backgroundColor =
					"transparent";

				const feedback = document.getElementById("feedback");
				if (feedback) {
					document.getElementById("feedback").innerHTML = "Press to Play..";
				}

				navigator.clipboard.writeText(window.location.toString());
				alert(
					"Copied to clipboard and ready to paste on to Notion (or wherever you want!)."
				);
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		background-color: transparent;
	}
	html {
		font-family: system-ui, sans-serif;
	}
	body {
		background-color: #f6f6f6;
		background-image: url("/animalcrossing_pattern.jpg");
		background-repeat: repeat-x;
		background-position: center;
		background-size: cover;

		width: 100vw;
		height: 100vh;
		overflow: clip;

		margin: 0;
		padding: 0;
	}

	@font-face {
		font-family: "Arial Rounded MT";
		src: url("/Arial_Rounded_MT.ttf") format("truetype");
		font-weight: normal;
		font-style: normal;
	}

	@font-face {
		font-family: "Arial Rounded MT Bold";
		src: url("/arialmtbold.ttf") format("truetype");
		font-weight: normal;
		font-style: normal;
	}

	* {
		font-family: "Arial Rounded MT Bold", sans-serif;
	}
	p {
		margin: 0;
		color: #fffdf2;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
			DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
